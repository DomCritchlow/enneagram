# Enneagram Application Configuration
# Copy this file to .env and update with your values

# Google Sheets Integration (REQUIRED)
# Path to your service account JSON file, or the JSON content directly
GOOGLE_SERVICE_ACCOUNT_JSON=/path/to/your/service-account.json
# Your Google Sheets spreadsheet ID (from the sheet URL)
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
# Data range in the sheet (optional, defaults to Sheet1!A:Z)
GOOGLE_SHEETS_RANGE=Sheet1!A:Z

# Application Settings
DEBUG=true
APP_TITLE=Enneagram Team Assessment

# File Configuration (usually no need to change)
QUESTIONS_FILE=questions.json
# For debugging, use: QUESTIONS_FILE=questions_short.json
BLURBS_FILE=type_blurbs.json

# Security Constraints
NAME_MAX_LENGTH=100
