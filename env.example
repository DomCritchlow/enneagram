# Enneagram Application Configuration
# Copy this file to .env and update with your values

# Security Settings
ADMIN_USER=admin
ADMIN_PASS=change-me-please
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///app/results.sqlite

# Application Settings
DEBUG=true
APP_TITLE=Enneagram Team Assessment

# File Configuration (usually no need to change)
QUESTIONS_FILE=questions.json
# For debugging, use: QUESTIONS_FILE=questions_short.json
BLURBS_FILE=type_blurbs.json

# Security Constraints
PASSWORD_MIN_LENGTH=8
NAME_MAX_LENGTH=100
